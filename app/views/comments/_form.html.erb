<%= form_for [@recipe, @comment], remote: true do |f| %>
  <div class="field">
    <div class="control mt-3 mx-2">
      <%= f.text_field :content, class:"input", placeholder:"コメント" %>
      <%= f.hidden_field :recipe_id, value: @recipe.id %>
    </div>
  </div>
  <div class="field is-grouped">
    <div class="control ml-2">
      <%= f.submit 'コメントする', class:"button is-link form_submit" %>
    </div>
  </div>
  <hr>
<% end %>
