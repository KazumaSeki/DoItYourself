<section class="hero is-light">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        作品詳細
      </h1>
    </div>
  </div>
</section>

<!-- 作品詳細のパネル -->
<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= image_tag @recipe.image.url %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @recipe.title %></p>
                <div id="index_like_<%= @recipe.id %>">
                  <%= render 'likes/like', recipe: @recipe %>
                </div>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>工程</th>
                </tr>
                <tr>
                  <td><%= simple_format @recipe.content %></td>
                </tr>
              </table>
              <% if @recipe.user.id == current_user.id %>
                <%= link_to "編集", edit_recipe_path(@recipe), class: "button is-light" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
<!-- 投稿者のパネル -->
      <div class="column is-4">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= image_tag @recipe.user.profile_image.url(@recipe.user) %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <%= link_to user_path(@recipe.user), class: "panel-block" do %>
                  <p class="title is-4"><%= @recipe.user.username %></p>
                <% end %>
              </div>
            </div>
            <div class="content">
            <%= @recipe.user.profile %>
            </div>
          </div>
        </div>
        <nav class="panel mt-5">
          <p class="panel-heading">コメント</p>
          <% if user_signed_in? %>
            <%= render partial: 'comments/form', locals: { comment: @comment, recipe: @recipe } %>
          <% end %>
          <div class="panel-block">
            <div class="comments_index">
              <div id="comments_area">
                <%= render partial: 'comments/index', locals: { comments: @comments } %>
              </div>
            </div>
          </div>
        </nav>
      </div>
    </div>
  </div>
</section>
