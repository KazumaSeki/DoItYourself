<section class="hero is-light">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        作品を編集する
      </h1>
    </div>
  </div>
</section>

<% if @recipe.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @recipe.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @recipe do |f| %>
          <div class="field">
            <%= f.label :title, '作品名', class: 'label' %>
            <%= f.text_field :title, class: 'input' %>
          </div>
          <div class="field">
            <%= f.label :content, 'Recipe', class: 'label' %>
            <%= f.text_area :content, class: 'textarea' %>
          </div>
          <div class="field">
            <%= f.label :image, '作品の画像', class: 'label' %>
            <%= f.file_field :image, class:'input' %>
          </div>
          <%= f.submit '更新する', class: 'button is-light' %>

        <% end %>
      </div>
    </div>
  </div>
</section>
