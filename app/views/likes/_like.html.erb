<% if current_user.already_liked?(recipe) %>
  <%= link_to recipe_likes_path(recipe), method: :delete, remote: true do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;">
      <%= recipe.likes.count %>
    </i>
  <% end %>
<% else %>
  <%= link_to recipe_likes_path(recipe), method: :post, remote: true do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: #C0C0C0;">
      <%= recipe.likes.count %>
    </i>
  <% end %>
<% end %>
